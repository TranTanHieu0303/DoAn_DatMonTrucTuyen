@using DoAn_DatMonTrucTuyen.Models;
@model SanPham

@{
    ViewBag.Title = "Chitiet";
    Layout = "~/Views/Shared/_LayoutCuaHang.cshtml";
}


<div class="container-fluid" style="background-color:white">
    <h2>Thông tin sản phẩm</h2>
                    <form action="~/CuaHang/Sua?ma=@Model.MaCH" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="ID">ID</label>
                            <input type="text" name="txtMa" class="form-control" value="@Model.MaSP" placeholder="Mã Sản Phẩm" readonly="true" />
                        </div>
                        <div class="form-group">
                            <label for="Name">Tên Món Ăn</label>
                            <input type="text" name="TenSP" class="form-control" value="@Model.TenSP" placeholder="Tên Sản Phẩm"/>
                        </div>
                        <div class="form-group">
                            <label for="Age">Mô Tả</label>
                            <input type="text" name="MoTa" class="form-control" value="@Model.MoTa" placeholder="Loại Sản Phẩm"/>
                        </div>
                        <div class="form-group">
                            <label >Loại Món Ăn : @Model.MaLoai</label>
                            <select name="Loai" >
                                <option value="LSP01">Đồ Ăn</option>
                                <option value="LSP02">Đồ uống</option>
                                <option value="LSP03">Vĩa Hè</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="State">Giá Bán</label>
                            <input type="number" name="Gia" value="@Model.DonGia" class="form-control" placeholder="Giá Bán"/>
                        </div>
                        <div class="form-group">
                            <label for="State">Tình Trạng</label>
                            <input type="text" name="tinhtrang" value="@Model.TinhTrang" class="form-control" placeholder="Tình Trạng"/>
                        </div>
                        <div class="form-group">
                            <label for="State">Hình Ảnh</label>
                            <input type="file" name="Hinh" class="form-control"/>
                            <img src="~/Content/HinhAnh/@Model.HinhAnh" style="width:200px;height:200px;border-radius:100px"/> Ảnh Hiện Tại
                        </div>
                        <input type="submit" value="Update" class="btn btn-primary" />
                        <a href="@Url.Action("ThucDon", "CuaHang", new { mach= Model.MaCH})" class="btn btn-default" >Close</a>
                    </form>
                </div>

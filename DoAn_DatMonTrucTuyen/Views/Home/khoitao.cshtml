@using DoAn_DatMonTrucTuyen.Models;
 @model GioHang
@{
    List<CuaHang> lst = (List<CuaHang>)Session["ch"];
    }
<div class="row" >
   <div class="col-md-3" >
      <p>
          <a href="@Url.Action("XemGioHang","DatHang")"><img src="~/Content/HinhAnh/gioi_hang.png" style="width:50px;height:50px;"/></a>
          <span class="giohang">
              @if (Model == null)
              {
                  <label>0</label>
              }
              else
              {
                  <label>
                      @Model.Somathang()
                  </label>
              }
           </span>

      </p>
   </div>
   <div class="col-md-9 ">
       <div class="row">
       @if(ViewBag.kh ==null)
       {
           <div class="col-md-8">
            <a class="btn" href="@Url.Action("DangNhap","KhachHang")" style="border:solid 1px #0ff;border-radius:5px;height:50px;text-align:center;font-size:20px;font-weight:bold" role="button">
                Đăng Nhập

            </a>
           </div>
           <div class="col-md-4">
            <img src="~/Content/HinhAnh/avatar.jpg" style="width:50px;height:50px;border-radius: 30px;" />
           </div> 
           
       }
           else
           {
                KhachHang kh = Session["kh"] as KhachHang;
                <div class="col-md-8">
            <p style="font-weight:bold;font-size:20px;padding:inherit">@kh.HoTen</p>
           </div>
           <div class="col-md-4">
               <nav class="navbar">
                <div class="dropdown">
                    <a class="dropdowwn-toggle" data-toggle="dropdown" id="TaiKhoan" aria-haspopup="true" aria-expanded="false" href="#"><img src="~/Content/HinhAnh/@kh.HinhAnh" style="width:50px;height:50px;border-radius: 30px;" /></a>
                   <div class="dropdown-menu" aria-labelledby="TaiKhoan" style="margin-left:-100px">
                       <a class="dropdown-item" href="@Url.Action("ThongTinTaiKhoan", "KhachHang", new {makh = kh.MaKH })">Thông Tin Tài Khoản</a>
                       @if (lst.Count>0)
                       {
                            <a class="dropdown-item" href="@Url.Action("ThongTinCH", "CuaHang", new {makh = kh.MaKH })">Cửa hàng của tôi</a>
                       }
                       <a class="dropdown-item" href="@Url.Action("DangNhap","KhachHang")">Đăng Xuất</a>
                       
                   </div>
               </div>
        </nav>
               <script src="~/Content/bootstrap/bootstrap/js/jquery-3.3.1.min.js"></script>
               <script src="~/Content/bootstrap/bootstrap/js/bootstrap.min.js"></script>
    
               
           </div> 
           }
       </div>
   </div>
</div>
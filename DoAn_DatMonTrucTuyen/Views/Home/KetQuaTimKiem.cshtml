
@using DoAn_DatMonTrucTuyen.Models;
@{
    ViewBag.Title = "KetQuaTimKiem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<SanPham>
<div class="w-100" style="background-color:white">
    <h2>@ViewBag.td</h2>
    <div class="row w-80"style="margin:auto">
        @foreach (SanPham sp in Model)
        {
            foreach (CuaHang ch in ViewData["CuaHang"] as List<CuaHang>)
            {
                if(ch.MaCH ==sp.MaCH)
                {
                    <div class="col-md-3 Sanpham" style="text-align:center;margin-bottom:10px;margin-top:10px">
                        <a href="@Url.Action("ChiTiet", "Home", new {ma=sp.MaSP})" style="text-decoration:none;color:black">
                            <img src="~/Content/HinhAnh/@sp.HinhAnh"/ style="width:200px;height:150px">
                            <p style="font-size:20px">@sp.TenSP</p>
                            <p>@ch.TenCH</p>
                            <p>@ch.DiaChi</p>
                            <p>Giá: <span style="color:red">@sp.DonGia VND</span></p>
                        </a>
                    </div> 
                 }
            }
        }
    </div>
</div>

@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Request.HttpMethod == "POST")
{
    if(ViewBag.tb)
    {
       <script type="text/javascript">
           confirm('Đăng ký thành công')
       </script>
    }
    else
    {
        <script type="text/javascript">
            confirm('Đăng Nhập không thành công')
        </script>
    }
}
<div class="container" style="margin:auto;text-align:center;background-color:white;min-height:300px">
<h1 class="w-100">ĐĂNG NHẬP</h1>
    <form action="/KhachHang/DangNhap" method="post">
    <table class="w-100">
        <tr>
            <td style="text-align:right">Tên Đăng Nhập:</td>
            <td style="text-align:left"><input type="text" name="txtTen" /></td>
        </tr>
        <tr>
            <td style="text-align:right">Mật Khẩu:</td>
            <td style="text-align:left"><input type="password" name="txtMK" /></td>
        </tr>
        <tr>
            <td style="text-align:right"></td>
            <td style="text-align:left"><input type="submit" value="Đăng Nhập" /></td>
        </tr>
        <tr>
            <td style="text-align:right">Bạn chưa có tài khoản?</td>
            <td style="text-align:left"><a href="@Url.Action("DangKy","KhachHang")">Đăng ký</a></td>
        </tr>
    </table>
    </form>

</div>
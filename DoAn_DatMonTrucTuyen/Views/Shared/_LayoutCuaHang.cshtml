<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/DinhDang.css" rel="stylesheet" />
    <link href="~/Content/bootstrap/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
        <div class="header">
            <div class="container">
                <div class="row" style="margin-bottom:5px" >
                    <div class="col-md-3">
                        <a href="@Url.Action("TrangChu","Home")"><img src="~/Content/HinhAnh/LoGoWeb.png" style="width:100% ;height:100%"/></a>
                    </div>
                    <div class="col-md-6">
                            <form class="form-inline" style="padding-top:25px" action="/Home/KetQuaTimKiem" method="post">
                                <input type="text" name="txtTK" placeholder="Nhập món bạn cần tìm" style="width:75%;height:50px;border-radius:5px" />

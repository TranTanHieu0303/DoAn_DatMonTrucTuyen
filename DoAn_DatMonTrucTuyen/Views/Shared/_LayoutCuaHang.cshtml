                        @Html.Action("khoitao","Home")
                    </div>
                </div>
             </div>
       </div>
    <div class="main"> 
    <div class="container-main">
        <div class="row" style="background-color:white">
            <ul class="nav nav-tabs w-100">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("TrangChu","Home")">Trang Chủ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("TrangChu","Home")">Thông Tin Cửa Hàng</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("DSCuaHang","CuaHang")">Gian hàng của bạn</a>
